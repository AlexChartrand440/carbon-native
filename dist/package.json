{
  "name": "carbon-native",
  "version": "0.0.6",
  "description": "A set of UI components for building React Native apps.",
  "author": "",
  "contributors": [
    {
      "name": "Tyler Buchea",
      "email": "tyler@buchea.com"
    },
    {
      "name": "Josh Buchea",
      "email": "josh@buchea.com"
    }
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && babel ./src --out-dir ./dist && cp package.json dist",
    "start": "npm run build && babel ./src --watch --out-dir ./dist",
    "prepare": "npm run build",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "src/*.js": [
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-native/carbon-native"
  },
  "bugs": {
    "url": "https://github.com/carbon-native/carbon-native/issues"
  },
  "files": ["LICENSE", "README.md", "index.js", "dist"],
  "keywords": ["react-native", "ui"],
  "peerDepenecies": {
    "react": ">=16.0.0-alpha.12",
    "react-native": ">=0.47.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-react-native": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1"
  },
  "license": "MIT",
  "dependencies": {}
}
