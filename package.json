{
  "name": "carbon-native",
  "version": "1.0.0",
  "description": "A set of UI components for building React Native apps.",
  "private": true,
  "author": "",
  "contributors": [
    {
      "name": "Tyler Buchea",
      "email": "tyler@buchea.com"
    },
    {
      "name": "Josh Buchea",
      "email": "josh@buchea.com"
    }
  ],
  "scripts": {
    "clean": "rimraf dist",
    "package-json": "node ./scripts/package-json.js",
    "copy-static-files": "node ./scripts/copy-static-files.js",
    "build":
      "yarn clean && babel ./src --out-dir dist && yarn package-json && yarn copy-static-files",
    "build-watch": "yarn build && babel ./src --watch --out-dir ./dist",
    "precommit": "lint-staged",
    "test": "jest",
    "start-dist": "NODE_ENV=production && react-native-scripts start",
    "start": "react-native-scripts start",
    "eject": "react-native-scripts eject",
    "android": "react-native-scripts android",
    "ios": "react-native-scripts ios",
    "test-expo": "node node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "lint-staged": {
    "src/*.js": [
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-native/carbon-native"
  },
  "bugs": {
    "url": "https://github.com/carbon-native/carbon-native/issues"
  },
  "keywords": ["react-native", "ui"],
  "peerDepenecies": {
    "react": ">=16.0.0-beta.5",
    "react-native": ">=0.49.5",
    "prop-types": ">=15.6.0"
  },
  "devDependencies": {
    "await-to-js": "^2.0.1",
    "babel-cli": "^6.26.0",
    "babel-preset-react-native": "^3.0.1",
    "fs-extra": "^4.0.2",
    "husky": "^0.14.3",
    "jest-expo": "^22.0.0",
    "lint-staged": "^4.0.3",
    "lodash": "^4.17.4",
    "prettier": "^1.5.3",
    "prop-types": "^15.6.0",
    "react-native-scripts": "1.7.0",
    "react-navigation": "^1.0.0-beta.11",
    "react-test-renderer": "16.0.0-beta.5",
    "rimraf": "^2.6.1"
  },
  "license": "MIT",
  "dependencies": {
    "color": "^2.0.1",
    "expo": "^22.0.2",
    "react": "16.0.0-beta.5",
    "react-native": "^0.49.5"
  }
}
