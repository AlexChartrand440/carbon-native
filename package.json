{
  "name": "carbon-native",
  "version": "1.1.0",
  "description": "A set of UI components for building React Native apps.",
  "private": true,
  "author": "",
  "contributors": [
    {
      "name": "Tyler Buchea",
      "email": "tyler@buchea.com"
    },
    {
      "name": "Josh Buchea",
      "email": "josh@buchea.com"
    }
  ],
  "scripts": {
    "clean": "rimraf dist",
    "package-json": "node ./scripts/package-json.js",
    "copy-static-files": "node ./scripts/copy-static-files.js",
    "build": "yarn clean && babel ./src --out-dir dist --copy-files && yarn package-json && yarn copy-static-files",
    "build-watch": "yarn build && babel ./src --watch --out-dir ./dist --copy-files",
    "precommit": "lint-staged",
    "test": "jest",
    "test-dist": "TEST_DIST=true yarn test",
    "start-dist": "NODE_ENV=production && expo start",
    "start": "expo start",
    "eject": "expo eject",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "test-expo": "node node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "lint-staged": {
    "src/*.js": [
      "prettier --write --single-quote --trailing-comma es5",
      "git add"
    ]
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-native/carbon-native"
  },
  "bugs": {
    "url": "https://github.com/carbon-native/carbon-native/issues"
  },
  "keywords": [
    "react-native",
    "ui"
  ],
  "peerDepenecies": {
    "react": ">=16.0.0-beta.5",
    "react-native": ">=0.49.5",
    "prop-types": ">=15.6.0"
  },
  "devDependencies": {
    "await-to-js": "^2.0.1",
    "babel-cli": "^6.26.0",
    "babel-preset-react-native": "^4.0.1",
    "fs-extra": "^7.0.0",
    "husky": "^0.14.3",
    "jest-expo": "^30.0.0",
    "lint-staged": "^7.2.2",
    "lodash": "^4.17.11",
    "prettier": "^1.14.2",
    "prop-types": "^15.6.2",
    "react-navigation": "^1.0.0-beta.11",
    "react-test-renderer": "16.5.1",
    "rimraf": "^2.6.2"
  },
  "license": "MIT",
  "dependencies": {
    "color": "^3.0.0",
    "expo": "^30.0.1",
    "react": "16.5.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-30.0.0.tar.gz"
  }
}
